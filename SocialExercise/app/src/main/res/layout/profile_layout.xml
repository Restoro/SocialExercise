<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.embedded.socialexercise.gui.ProfileActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="124dp"
        android:layout_height="105dp"
        app:srcCompat="@drawable/boy0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="First Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"/>
    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="217dp"
        android:layout_height="43dp"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        app:layout_constraintLeft_toRightOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="Last Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"/>
    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="217dp"
        android:layout_height="43dp"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        app:layout_constraintTop_toBottomOf="@id/txtFirstName"
        app:layout_constraintLeft_toRightOf="@id/textView2"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="Male"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>
    <Switch
        android:id="@+id/isMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintLeft_toRightOf="@id/textView5"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="Female"
        tools:layout_marginLeft="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@id/isMale"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="Address"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5"/>
    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="217dp"
        android:layout_height="43dp"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        app:layout_constraintLeft_toRightOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView5"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="About Me"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>
    <EditText
        android:id="@+id/txtAbout"
        android:layout_width="217dp"
        android:layout_height="43dp"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        app:layout_constraintLeft_toRightOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>


    <Button
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:onClick="onSendMsgClick"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"/>




</android.support.constraint.ConstraintLayout>